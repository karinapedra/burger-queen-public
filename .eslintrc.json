{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "overrides": [
    ],
    "plugins": [
        "react","jsx-a11y", "import"
    ],
    "rules": {
        "import/no-extraneous-dependencies": "off", //desabiliar erro REACT
        "react/function-component-definition": "off", //desabilitar regras de FUNÇÃO
        "arrow-body-style": "off", //regra de arrow simplificada
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "jsx-quotes": [
            2,
            "prefer-double"
        ],
        "eol-last": [
            "error",
            "always"
        ]
          
    }
}